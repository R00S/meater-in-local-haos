<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarThumbVertical="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.65"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.6"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/dialGuideTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.13"/>
        <com.apptionlabs.meater_app.views.DialComponent
            android:id="@+id/meaterView"
            android:clipChildren="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/dialGuideTop"/>
        <com.apptionlabs.meater_app.views.TemperatureView
            android:id="@+id/indicatorInternal"
            android:layout_width="0dp"
            android:layout_height="@dimen/indicator_cell_landscape_max_height"
            app:indicator_color="@color/meater_pink"
            app:indicator_is_list_item="false"
            app:indicator_label="@string/internal_label"
            app:layout_constraintBottom_toTopOf="@+id/AdjustLabel"
            app:layout_constraintEnd_toStartOf="@+id/indicatorTarget"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"/>
        <com.apptionlabs.meater_app.views.TemperatureView
            android:id="@+id/indicatorTarget"
            android:layout_width="0dp"
            android:layout_height="@dimen/indicator_cell_landscape_max_height"
            app:indicator_color="@color/meater_blue"
            app:indicator_is_list_item="false"
            app:indicator_label="@string/target_label"
            app:layout_constraintBottom_toTopOf="@+id/AdjustLabel"
            app:layout_constraintEnd_toStartOf="@+id/indicatorAmbient"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/indicatorInternal"
            app:layout_constraintTop_toBottomOf="@+id/cookNameLabel"/>
        <com.apptionlabs.meater_app.views.TemperatureView
            android:id="@+id/indicatorAmbient"
            android:layout_width="0dp"
            android:layout_height="@dimen/indicator_cell_landscape_max_height"
            app:indicator_color="@color/meater_green"
            app:indicator_is_list_item="false"
            app:indicator_label="@string/ambient_label"
            app:layout_constraintBottom_toTopOf="@+id/AdjustLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/indicatorTarget"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="center"
            android:id="@+id/AdjustLabel"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/cook_name_height_landscape_single_probe"
            android:text="@string/adjust_cook_label"
            android:layout_centerInParent="true"
            app:autoSizeMaxTextSize="22dp"
            app:autoSizeMinTextSize="1dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/graphBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indicatorTarget"/>
        <com.apptionlabs.meater_app.views.RoundedImageWithLabel
            android:id="@+id/fabAlertBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/indicator_cell_landscape_max_height"
            app:indicator_color="@color/primary_color"
            app:indicator_icon="@drawable/bell"
            app:indicator_is_list_item="false"
            app:layout_constraintEnd_toStartOf="@+id/graphBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/AdjustLabel"/>
        <com.apptionlabs.meater_app.views.RoundedImageWithLabel
            android:id="@+id/graphBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/indicator_cell_landscape_max_height"
            app:indicator_color="@android:color/holo_orange_light"
            app:indicator_icon="@drawable/ic_graph_icon_"
            app:indicator_is_list_item="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancelCookBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fabAlertBtn"
            app:layout_constraintTop_toBottomOf="@+id/AdjustLabel"/>
        <com.apptionlabs.meater_app.views.RoundedImageWithLabel
            android:id="@+id/cancelCookBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/indicator_cell_landscape_max_height"
            app:indicator_color="@color/primary_color"
            app:indicator_icon="@drawable/cancel_cook"
            app:indicator_is_list_item="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/graphBtn"
            app:layout_constraintTop_toBottomOf="@+id/AdjustLabel"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="@dimen/single_probe_screen_cook_name_max_size"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/cookNameLabel"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_light"
            app:layout_constraintBottom_toTopOf="@+id/indicatorTarget"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <com.apptionlabs.meater_app.views.connectionwarning.ConnectionLostImageOverlay
            android:id="@+id/connection_lost_with_image_overlay"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="600dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
