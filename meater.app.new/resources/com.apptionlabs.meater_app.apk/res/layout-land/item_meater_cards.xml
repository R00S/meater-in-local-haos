<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:background="@color/dashboard_cell_disabled_color"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:left_swipe_enabled="false"
    app:right_swipe_enabled="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/innerView"
        android:background="@color/dashboard_cell_disabled_color"
        android:clipChildren="false"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/baseLayoutContainer"
            android:background="@color/white"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.apptionlabs.meater_app.views.DialComponent
                android:id="@+id/meaterView"
                android:clipChildren="false"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:indicator_is_list_item="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/guideline1"
                app:layout_constraintTop_toTopOf="@+id/guideline"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.75"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.065"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/temperatureRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
                android:weightSum="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/guideline1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.apptionlabs.meater_app.views.TemperatureView
                    android:layout_gravity="center"
                    android:id="@+id/tempIndicatorInternal"
                    android:clipChildren="false"
                    android:layout_width="@dimen/indicator_cell_max_height"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:indicator_color="@color/meater_pink"
                    app:indicator_is_list_item="false"
                    app:indicator_label="@string/internal_label"/>
                <com.apptionlabs.meater_app.views.TemperatureView
                    android:layout_gravity="center"
                    android:id="@+id/tempIndicatorTarget"
                    android:layout_width="@dimen/indicator_cell_max_height"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    app:indicator_color="@color/meater_blue"
                    app:indicator_is_list_item="false"
                    app:indicator_label="@string/target_label"/>
                <com.apptionlabs.meater_app.views.TemperatureView
                    android:layout_gravity="center"
                    android:id="@+id/tempIndicatorAmbient"
                    android:layout_width="@dimen/indicator_cell_max_height"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    app:indicator_color="@color/meater_green"
                    app:indicator_is_list_item="false"
                    app:indicator_label="@string/ambient_label"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/grey_6"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/text_cook_name"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_light"
                app:autoSizeMaxTextSize="32dp"
                app:autoSizeMinTextSize="1dp"
                app:autoSizeStepGranularity="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.135"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/guideline1"/>
            <LinearLayout
                android:layout_gravity="bottom|left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="12dp"
                    android:textColor="@color/black_color"
                    android:id="@+id/debug_info"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
            <View
                android:background="@color/grey_e"
                android:layout_width="0.7dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <FrameLayout
                android:orientation="vertical"
                android:id="@+id/row_back_ground_container"
                android:background="@drawable/probe_list_selector"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.apptionlabs.meater_app.views.ProbeConnectionStatusView
                android:id="@+id/connection_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ru.rambler.libs.swipe_layout.SwipeLayout>
