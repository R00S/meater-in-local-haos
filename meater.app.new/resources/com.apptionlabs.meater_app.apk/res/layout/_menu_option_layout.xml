<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMenu"
    android:layout_width="match_parent"
    android:layout_height="42dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layoutStandard"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/imgIcon1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/fontBody_2"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layoutVertical"
        android:background="?android:attr/colorBackground"
        android:padding="3dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/viewCentre"
            android:visibility="invisible"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginBottom="3dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12dp"
            android:ellipsize="end"
            android:id="@+id/txtOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_above="@+id/viewCentre"
            android:layout_marginStart="4dp"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/imgIconA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewCentre"
            android:layout_alignStart="@+id/txtOption2"/>
        <ImageView
            android:id="@+id/imgIconB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewCentre"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imgIconA"/>
    </RelativeLayout>
</RelativeLayout>
