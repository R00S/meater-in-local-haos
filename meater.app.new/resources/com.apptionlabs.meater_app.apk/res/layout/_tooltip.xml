<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/toolViewContainer"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/tool_tip_tint">
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/txtToolTipView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ambient_temp_is_too_low"
        android:breakStrategy="balanced"
        style="@style/MEATER.Body1.Normal"/>
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:id="@+id/toolViewButton"
        android:background="@drawable/rounded_button_background"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        style="@style/MEATER.Body1.Normal"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/moreInfoView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/moreInfoImage"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_link_icon"
            android:scaleType="centerInside"
            android:layout_marginEnd="7dp"
            app:tint="@color/aqua"/>
        <TextView
            android:textColor="@color/aqua"
            android:id="@+id/moreInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_information"
            style="@style/MEATER.Body1.Normal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/cloudStatusView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/cloudStatusImage"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_link_icon"
            android:scaleType="centerInside"
            android:layout_marginEnd="7dp"
            app:tint="@color/aqua"/>
        <TextView
            android:textColor="@color/aqua"
            android:id="@+id/cloudStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_status"
            style="@style/MEATER.Body1.Normal"/>
    </LinearLayout>
</LinearLayout>
