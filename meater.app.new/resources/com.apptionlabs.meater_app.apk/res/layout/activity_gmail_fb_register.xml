<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/screen_default_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbarThumbVertical="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.apptionlabs.meater_app.views.AlertView
                    android:id="@+id/alert_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/top_view"
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="18dp"
                        android:textColor="@color/grey_9"
                        android:id="@+id/screen_heading"
                        android:paddingTop="2dp"
                        android:paddingBottom="4dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/title_activity_product_registration"
                        android:textAllCaps="true"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        style="@style/NormalListTitle"/>
                    <View
                        android:background="@color/grey_e"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/normal_edit_item_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16dp"
                            android:textColor="@color/black_color"
                            android:id="@+id/heading_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/register_screen_label_1"
                            android:layout_weight="3"
                            android:layout_marginEnd="10dp"
                            style="@style/ExpenseEditLabel"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/register_about_me_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/top_view">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/grey_9"
                        android:id="@+id/about_heading"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/about_me_heading"
                        android:textAllCaps="true"
                        android:layout_marginStart="8dp"
                        style="@style/NormalListTitle"/>
                    <View
                        android:background="@color/grey_e"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/name_layout"
                    android:background="@drawable/normal_edit_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_below="@+id/email_layout">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:layout_below="@+id/register_about_me_text_view">
                        <ImageView
                            android:id="@+id/name_valid_image"
                            android:visibility="visible"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/valid_field_image"
                            android:layout_marginEnd="4dp"
                            app:tint="@color/meater_green"/>
                        <TextView
                            android:textSize="15dp"
                            android:textColor="@color/black_color"
                            android:id="@+id/name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name_label"
                            android:layout_marginEnd="10dp"
                            style="@style/ExpenseEditLabel"/>
                    </LinearLayout>
                    <TextView
                        android:enabled="false"
                        android:textColor="@color/grey_e"
                        android:textColorHint="@color/grey_e"
                        android:ellipsize="end"
                        android:id="@+id/name_field"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_name_field_hint"
                        android:maxLines="1"
                        android:maxLength="64"
                        android:layout_weight="7.5"
                        android:inputType="none"
                        style="@style/ExpenseEditText"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/email_layout"
                    android:background="@drawable/normal_edit_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:weightSum="10"
                    android:layout_below="@+id/register_about_me_text_view">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:layout_below="@+id/register_about_me_text_view">
                        <ImageView
                            android:id="@+id/email_valid_image"
                            android:visibility="visible"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/valid_field_image"
                            android:layout_below="@+id/register_email_text_view"
                            android:layout_marginEnd="4dp"
                            app:tint="@color/meater_green"/>
                        <TextView
                            android:textSize="15dp"
                            android:textColor="@color/black_color"
                            android:id="@+id/email_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email_label"
                            android:layout_marginEnd="10dp"
                            style="@style/ExpenseEditLabel"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/grey_e"
                        android:textColorHint="@color/grey_e"
                        android:gravity="center"
                        android:id="@+id/email_field"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_field_hint"
                        android:maxLines="1"
                        android:layout_weight="6.5"
                        app:autoSizeMaxTextSize="30dp"
                        app:autoSizeMinTextSize="4dp"
                        app:autoSizeStepGranularity="1dp"
                        app:autoSizeTextType="uniform"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/t_m_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/fb_layout1">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/grey_9"
                        android:id="@+id/tm_heading"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/terms_and_condition_heading"
                        android:textAllCaps="true"
                        android:layout_marginStart="8dp"
                        style="@style/NormalListTitle"/>
                    <View
                        android:id="@+id/termViewline"
                        android:background="@color/grey_e"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/termsConditionTop"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">
                    <ImageView
                        android:id="@+id/cloudImage"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:src="@drawable/cloud_icon_outline"
                        app:tint="@color/grey_e"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="16dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/termsConditionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/update_terms_condition_screen_title"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="16dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/termsConditionText1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="7dp"
                        android:text="@string/update_terms_condition_screen_text1"
                        android:layout_weight="10"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="16dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/termsConditionText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/update_terms_condition_screen_text2"/>
                </LinearLayout>
                <View
                    android:id="@+id/privacyTopDevider"
                    android:background="@color/grey_e"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@+id/check_box_container"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/privacy_container"
                    android:background="@drawable/layout_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_below="@+id/t_m_heading"
                    android:onClick="onPrivacyLinkClick">
                    <TextView
                        android:textSize="16dp"
                        android:id="@+id/policy_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_policy_button"
                        android:layout_weight="10"
                        style="@style/NormalTextViewLeft"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/terms_condition_container"
                    android:background="@drawable/layout_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_below="@+id/privacy_container"
                    android:onClick="onTermsConditionClick">
                    <TextView
                        android:textSize="16dp"
                        android:id="@+id/terms_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_and_condition_use_button"
                        android:layout_weight="10"
                        style="@style/NormalTextViewLeft"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/emailClubCheckBoxContainer"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/terms_condition_layout">
                    <CheckBox
                        android:gravity="top"
                        android:id="@+id/emailClubCheckBox"
                        android:background="@drawable/selector_test"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_screen_email_club_box_label"
                        android:paddingStart="3dp"
                        android:paddingEnd="4dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"/>
                </LinearLayout>
                <View
                    android:id="@+id/emailClubDivider"
                    android:background="@color/grey_e"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@+id/emailClubCheckBoxContainer"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/check_box_container"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailClubDivider">
                    <CheckBox
                        android:gravity="top"
                        android:id="@+id/confirm_check_box"
                        android:background="@drawable/selector_test"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_screen_label_4"
                        android:paddingStart="3dp"
                        android:paddingEnd="4dp"
                        android:layout_marginStart="3dp"/>
                </LinearLayout>
                <View
                    android:id="@+id/termBoxDevider"
                    android:background="@color/grey_e"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@+id/check_box_container"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/cancelButton"
                        android:background="@drawable/rounded_button_background"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="48dp"
                        android:text="@string/cancel_label"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:onClick="onCancelButtonClick"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginStart="12dp"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18dp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="right"
                        android:id="@+id/submitButton"
                        android:background="@drawable/rounded_button_background"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="48dp"
                        android:text="@string/submit"
                        android:layout_alignParentRight="true"
                        android:onClick="onSubmitClicked"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginEnd="12dp"/>
                </RelativeLayout>
                <View
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/check_box_container"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:theme="@style/RedAccent"
        android:id="@+id/mProgressBar"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>
