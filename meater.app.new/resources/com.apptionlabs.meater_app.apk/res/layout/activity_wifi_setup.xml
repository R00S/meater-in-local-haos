<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:theme="@style/AppTheme"
            android:id="@+id/toolbar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/title_activity_wifi_setup"
            app:titleCentered="true"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="@dimen/max_screen_width">
                <TextView
                    android:id="@+id/txtHeaderNetworkDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_block_network_details"
                    android:layout_below="@+id/viewConnectionStatus"
                    style="@style/DetailHeaderBlock"/>
                <TextView
                    android:id="@+id/txtHeaderWifiConfigure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_activity_wifi_setup"
                    android:layout_below="@+id/listDetails"
                    style="@style/DetailHeaderBlock"/>
                <TextView
                    android:textSize="16dp"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtWifiConfigure"
                    android:background="@color/view_active_color"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/block_setup_screen_1_button"
                    android:maxLines="2"
                    android:layout_below="@+id/txtHeaderWifiConfigure"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"/>
                <TextView
                    android:id="@+id/txtHeaderConnectionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_connection_status_header"
                    style="@style/DetailHeaderBlock"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtHeaderNetworkDetails"/>
                <include
                    android:id="@+id/viewConnectionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtHeaderConnectionStatus"
                    layout="@layout/item_left_right"/>
                <ProgressBar
                    android:theme="@style/RedAccent"
                    android:layout_gravity="center"
                    android:id="@+id/mProgressBar"
                    android:visibility="gone"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
