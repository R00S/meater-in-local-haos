<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_f6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/alertView"
        android:background="@color/primary_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/oneLineContainer"
            android:background="@color/primary_color"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/oneLabelInfoImage"
                android:padding="2dp"
                android:layout_width="19dp"
                android:layout_height="22dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/warning1"
                android:scaleType="centerInside"
                android:layout_below="@+id/register_email_text_view"
                app:tint="@android:color/white"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/oneLineLabel"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginBottom="4dp"
                android:text="@string/register_screen_alert_enter_valid_email_text"
                android:includeFontPadding="false"
                style="@style/NormalTextViewLeft"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/multiLineContainer"
            android:background="@color/primary_color"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/infoImage"
                android:padding="2dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/warning1"
                android:scaleType="centerInside"
                android:layout_below="@+id/register_email_text_view"
                app:tint="@android:color/white"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/multiLineLabel"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginBottom="4dp"
                android:text="@string/please_enter_valid_email_alt_error"
                android:includeFontPadding="false"
                style="@style/NormalTextViewLeft"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/multiAlertContainer"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/container1"
                android:background="@color/primary_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/dot"
                    android:includeFontPadding="false"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/container1Label"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/register_screen_alert_enter_valid_email_text"
                    android:includeFontPadding="false"
                    style="@style/NormalTextViewLeft"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/container2"
                android:background="@color/primary_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/dot"
                    android:includeFontPadding="false"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/container2Label"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/register_screen_alert_enter_name_text"
                    android:includeFontPadding="false"
                    style="@style/NormalTextViewLeft"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/container3"
                android:background="@color/primary_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/dot"
                    android:includeFontPadding="false"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/container3Label"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/register_screen_alert_enter_valid_password"
                    android:includeFontPadding="false"
                    style="@style/NormalTextViewLeft"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/container4"
                android:background="@color/primary_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/dot"
                    android:includeFontPadding="false"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/container4Label"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/register_screen_alert_password_not_match"
                    android:includeFontPadding="false"
                    style="@style/NormalTextViewLeft"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/container5"
                android:background="@color/primary_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/dot"
                    android:includeFontPadding="false"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/container5Label"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/register_screen_alert_accept_terms_and_condition"
                    android:includeFontPadding="false"
                    style="@style/NormalTextViewLeft"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
