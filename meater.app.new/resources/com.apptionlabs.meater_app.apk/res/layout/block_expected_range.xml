<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarThumbVertical="@color/white"
    android:id="@+id/signInScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewsContainer"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/headingText"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/expected_range_text"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_light"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toTopOf="@+id/text1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headingText">
            <com.apptionlabs.meater_app.views.VerticalConnectionComponent
                android:layout_gravity="center"
                android:id="@+id/vertical_connection_1"
                android:visibility="visible"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_weight="4.7"
                android:layout_below="@+id/headingText"
                android:layout_centerHorizontal="true"
                app:need_red_color="false"/>
            <com.apptionlabs.meater_app.views.VerticalConnectionComponent
                android:layout_gravity="center"
                android:id="@+id/vertical_connection_2"
                android:visibility="visible"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_below="@+id/headingText"
                android:layout_centerHorizontal="true"
                app:need_red_color="true"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/screen5_image1"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:layout_below="@+id/headingText"
            app:layout_constraintBottom_toTopOf="@+id/text1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headingText">
            <com.apptionlabs.meater_app.views.VerticalConnectionComponent
                android:layout_gravity="center"
                android:id="@+id/vertical_connection_12"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_weight="4.7"
                android:layout_centerHorizontal="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/divider0"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/imageView1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/ic_probe_horizontal"
                android:scaleType="centerInside"
                android:layout_weight="0.03"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider0"/>
            <View
                android:id="@+id/divider"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.03"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView1"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/bleImageLayout1"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4"
                android:layout_weight="2.9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.28"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider">
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center"
                    android:id="@+id/bleText1"
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:text="@string/connection_to_probe_view_bl_text"
                    android:layout_weight="1.5"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginStart="12dp"
                    app:autoSizeMaxTextSize="16dp"
                    app:autoSizeMinTextSize="4dp"
                    app:autoSizeStepGranularity="1dp"
                    app:autoSizeTextType="uniform"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/bleImage1"
                        android:background="@color/white"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/connection_ble"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <com.apptionlabs.meater_app.views.TextSwitcherTextView
                    android:gravity="center_vertical"
                    android:id="@+id/bleText2"
                    android:padding="0dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:maxLines="4"
                    android:layout_weight="1.5"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:autoSizeMaxTextSize="16dp"
                    app:autoSizeMinTextSize="4dp"
                    app:autoSizeStepGranularity="1dp"
                    app:autoSizeTextType="uniform"/>
            </LinearLayout>
            <View
                android:id="@+id/divider2"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bleImageLayout1"/>
            <ImageView
                android:id="@+id/imageView2"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_meater_block_front"
                android:scaleType="centerInside"
                android:layout_weight="1.4"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"/>
            <View
                android:id="@+id/divider3"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/bleImageLayout2"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:weightSum="4"
                android:layout_weight="2.8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.29"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3">
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center"
                    android:id="@+id/bleText3"
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:text="@string/connction_to_block_via_wifi"
                    android:layout_weight="1.3"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginStart="12dp"
                    app:autoSizeMaxTextSize="16dp"
                    app:autoSizeMinTextSize="4dp"
                    app:autoSizeStepGranularity="1dp"
                    app:autoSizeTextType="uniform"/>
                <RelativeLayout
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/wifi_container_width">
                    <ImageView
                        android:id="@+id/bleImage2"
                        android:background="@color/white"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_wifi_high"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center_vertical"
                    android:id="@+id/bleText4"
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:text="@string/typical_range_one_o_five_text"
                    android:layout_weight="1.3"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:autoSizeMaxTextSize="16dp"
                    app:autoSizeMinTextSize="4dp"
                    app:autoSizeStepGranularity="1dp"
                    app:autoSizeTextType="uniform"/>
            </LinearLayout>
            <View
                android:id="@+id/divider4"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bleImageLayout2"/>
            <ImageView
                android:id="@+id/imageView3"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/ic_iphonex"
                android:scaleType="fitCenter"
                android:layout_weight="1.42"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bleImageLayout2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:textSize="14dp"
            android:gravity="center"
            android:id="@+id/text1"
            android:background="@color/white"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/extended_range_meater_block_text"
            android:layout_below="@+id/screen5_image1"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_light"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/divider5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"/>
        <View
            android:id="@+id/divider5"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
