<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbarThumbVertical="@color/white"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxWidth="@dimen/max_screen_width">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/viewsContainer"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_max="@dimen/max_screen_width">
                <TextView
                    android:textSize="@dimen/guide_screen_title_text_size"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/headingText"
                    android:padding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/block_wifi_mode_text"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"/>
                <FrameLayout
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headingText">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/panel"
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_block_panel"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/penalLight"
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/ic_block_panel_light"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/startUp"
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_block_ui_startup"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/header"
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_block_ui_meater_header"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/progress1"
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_block_ui_startup_progress_1"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/progress2"
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_block_ui_startup_progress_2"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/progress3"
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_block_ui_startup_progress_3"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/progress4"
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_block_ui_startup_progress_4"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/selectMode"
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_block_ui_select_mode"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/selectModeChoice"
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="400dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_block_ui_select_mode_choice_1"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"/>
                </FrameLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/text1"
                    android:padding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:maxWidth="400dp"
                    android:text="@string/block_animation_text"
                    android:layout_below="@+id/image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
