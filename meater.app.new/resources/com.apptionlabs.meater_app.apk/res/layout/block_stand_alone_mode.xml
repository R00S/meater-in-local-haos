                android:id="@+id/connectionSpinner4"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_connecting_spinner_4_1"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/uIsetup1"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_setup_1"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/uIsetup2"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_setup_2"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/uIsetup3"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_setup_3"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/uIsetup4"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_setup_4"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/uImeatSelection"
                android:visibility="gone"
