<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbarThumbVertical="@color/white"
    android:id="@+id/signInScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxWidth="@dimen/max_screen_width">
        <TextView
            android:textSize="26dp"
            android:gravity="center"
            android:id="@+id/headingText"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/using_m_block_stand_alone_text"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_light"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageLayout"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headingText"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/panel"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/ic_block_panel"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/penalLight"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_block_panel_light"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/startUp"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_block_ui_startup"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/header"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_block_ui_meater_header"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/progress1"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_block_ui_startup_progress_1"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/selectMode"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_block_ui_select_mode"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/selectModeChoice"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_block_ui_select_mode_choice_1"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/selectModeChoice2"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_select_mode_choice_2"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/blockUiConnecting"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_connecting"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/connectionSpinner1"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_connecting_spinner_1_1"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/connectionSpinner2"
