                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_cook_selection_medwell"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/blockUiCookStarted"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_cook_started"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/blockUiCookProgress"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_cook_started_progress_1"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/blockUiTarget"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_target"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/blockUiAmbient"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_ambient"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/blockUiInternal"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
