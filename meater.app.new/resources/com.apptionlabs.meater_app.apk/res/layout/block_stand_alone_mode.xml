                android:src="@drawable/block_ui_internal"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/blockUiRemaining"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_remaining"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/blockUi5MinAlert"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_five_min_alert"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/removeFromHeat"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/block_ui_remove_from_heat"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>
        </FrameLayout>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black_color"
            android:gravity="center"
            android:id="@+id/text1"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:maxWidth="400dp"
            android:text="@string/stand_alone_animation_text1"
            android:layout_below="@+id/imageLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>
</ScrollView>
