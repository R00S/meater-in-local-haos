<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/view_active_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black_color"
        android:id="@+id/title"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/grey_e"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/primary_color"
        android:id="@+id/resetTV"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/grey_e"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/primary_color"
        android:id="@+id/unpairedProbes"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unpair Probes"/>
    <View
        android:id="@+id/divider"
        android:background="@color/grey_e"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/primary_color"
        android:id="@+id/recoveryMode"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recovery Mode"/>
    <View
        android:background="@color/grey_e"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <Button
        android:id="@+id/course_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/cancel_label"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
</LinearLayout>
