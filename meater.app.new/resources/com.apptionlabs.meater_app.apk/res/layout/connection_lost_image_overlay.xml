<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/baseView"
    android:background="@drawable/gray_rounder_corner_transparent_shape"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="parent">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/alert_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/warning_image"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connection_lost"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/NormalTextView"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/image"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_meater_plus_lost_connection_to_probe"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>
    <HorizontalScrollView
        android:layout_gravity="center_horizontal"
        android:id="@+id/layoutConnectionsWrapper"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_marginTop="12dp">
        <com.apptionlabs.meater_app.views.DeviceConnectionView
            android:layout_gravity="center_horizontal"
            android:id="@+id/layoutConnections"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    </HorizontalScrollView>
    <TextView
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textColorLink="@color/meater_grey"
        android:autoLink="web"
        android:layout_gravity="center"
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:text="@string/connection_lost"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        style="@style/NormalTextView"/>
</LinearLayout>
