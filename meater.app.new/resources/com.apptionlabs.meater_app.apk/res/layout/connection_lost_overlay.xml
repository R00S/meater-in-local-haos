<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/baseView"
            android:background="@drawable/gray_rounder_corner_transparent_shape"
            android:padding="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.9">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/alert_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/warning_image"
                android:scaleType="fitXY"/>
            <TextView
                android:textSize="26dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/connectionStatusInfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connection_lost"
                style="@style/NormalTextView"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/connectionStatusInfo2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/connection_lost_alert_text"
                android:breakStrategy="balanced"
                style="@style/NormalTextView"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/connectionStatusInfo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/move_this_device_closer_alert_text"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                style="@style/NormalTextView"/>
            <RelativeLayout
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp">
                <TextView
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/n_c_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connection_for_help_tap_text"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="2dp"
                    style="@style/NormalTextView"/>
                <ImageView
                    android:id="@+id/n_c_image_0"
                    android:visibility="gone"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_291"
                    android:layout_toRightOf="@+id/n_c_text_4"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/n_c_text_5"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/below_label"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/n_c_image_0"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    style="@style/NormalTextView"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
