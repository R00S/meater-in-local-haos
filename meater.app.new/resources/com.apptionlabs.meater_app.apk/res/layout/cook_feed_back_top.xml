<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/baseLayout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:theme="@style/AppTheme"
            android:id="@+id/toolbar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/cook_feedback"
            app:titleCentered="false"/>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:textSize="23dp"
        android:textColor="@color/black_color"
        android:gravity="center_horizontal"
        android:id="@+id/cookNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_start_padding"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"/>
    <TextView
        android:textSize="17dp"
        android:textColor="@color/black_color"
        android:gravity="center_horizontal"
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cookNameText"/>
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="5"
        android:rating="5"
        android:isIndicator="true"
        android:layout_alignParentBottom="true"
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:progressTint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateText"/>
    <TextView
        android:textSize="23dp"
        android:textColor="@color/black_color"
        android:gravity="center_horizontal"
        android:id="@+id/ovenTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_cooking_method_text"
        android:layout_centerHorizontal="true"
        android:translationY="-10dp"
        android:paddingStart="@dimen/view_start_padding"
        android:paddingEnd="@dimen/view_start_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"/>
    <TextView
        android:textSize="17dp"
        android:textColor="@color/black_color"
        android:gravity="center_horizontal"
        android:id="@+id/weDoRecallYouText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/we_do_read_all_text"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ovenTypeText"/>
    <EditText
        android:textSize="14dp"
        android:id="@+id/noteField"
        android:background="@drawable/light_grey_rounded_bg"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:maxLength="64"
        android:layout_centerVertical="true"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weDoRecallYouText"
        app:layout_constraintWidth_max="600dp"/>
    <ProgressBar
        android:theme="@style/RedAccent"
        android:id="@+id/mLoading"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
