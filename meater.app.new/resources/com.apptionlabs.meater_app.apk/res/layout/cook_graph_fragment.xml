<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarThumbVertical="@color/white"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_horizontal"
        android:background="@color/view_active_color"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxWidth="@dimen/max_screen_width">
        <RelativeLayout
            android:id="@+id/cookSummaryRow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:id="@+id/ratingBarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/targetLayout">
                <TextView
                    android:textSize="12dp"
                    android:gravity="center"
                    android:id="@+id/rateText"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/rate_your_cook"
                    android:layout_alignLeft="@+id/ratingBar"
                    android:layout_alignRight="@+id/ratingBar"
                    app:layout_constraintEnd_toEndOf="@+id/ratingBar"
                    app:layout_constraintStart_toStartOf="@+id/ratingBar"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/NormalTextViewLeft"/>
                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:max="5"
                    android:rating="0"
                    android:stepSize="1"
                    android:layout_alignParentBottom="true"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:progressTint="@color/primary_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/targetLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp">
                <TextView
                    android:textSize="22dp"
                    android:textColor="@color/meater_blue"
                    android:gravity="center_horizontal"
                    android:id="@+id/targetValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    style="@style/NormalTextViewLeft"/>
                <TextView
                    android:textSize="12dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/targetTextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/target_label"
                    android:layout_below="@+id/targetValue"
                    android:layout_centerHorizontal="true"
                    style="@style/NormalTextViewLeft"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/peakLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/targetLayout"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp">
                <TextView
                    android:textSize="22dp"
                    android:textColor="@color/meater_pink"
                    android:gravity="center_horizontal"
                    android:id="@+id/peakValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    style="@style/NormalTextViewLeft"/>
                <TextView
                    android:textSize="12dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/peakTextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/peak_label"
                    android:layout_below="@+id/peakValue"
                    android:layout_centerHorizontal="true"
                    style="@style/NormalTextViewLeft"/>
            </RelativeLayout>
        </RelativeLayout>
        <com.apptionlabs.meater_app.views.CookGraph
            android:id="@+id/graph"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cookSummaryRow"
            app:layout_constraintWidth_max="@dimen/max_screen_width"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.65"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="@dimen/view_start_padding"
            android:layout_marginEnd="@dimen/view_start_padding"
            app:layout_constraintTop_toBottomOf="@+id/graph"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@color/primary_color"/>
        <FrameLayout
            android:id="@+id/simpleFrameLayout"
            android:background="@color/view_active_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
