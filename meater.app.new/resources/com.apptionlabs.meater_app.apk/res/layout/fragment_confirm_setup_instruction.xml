<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:theme="@style/AppTheme"
            android:id="@+id/toolbar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/setup_cook_label"
            app:titleCentered="false"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintWidth_max="@dimen/max_screen_width">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/detail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <TextView
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:id="@+id/detail"
            android:paddingTop="10dp"
            android:paddingBottom="22dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/usda_compliance_screen_text1"
            android:paddingStart="@dimen/view_start_padding"
            android:paddingEnd="@dimen/view_end_padding"
            app:autoSizeMaxTextSize="@dimen/probe_insertion_screen_max_text_size"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/instructionVideo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/MEATER.Body1.Normal"/>
        <View
            android:id="@+id/instructionVideoDivider"
            android:background="@color/grey_e"
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            app:layout_constraintBottom_toTopOf="@+id/instructionVideo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/instructionVideo"
            android:background="@drawable/selected_white_bg_with_pink_selection"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:minHeight="42dp"
            android:layout_alignParentBottom="true"
            android:onClick="onInstructionVideoClick"
            app:layout_constraintBottom_toTopOf="@+id/doNotShowDivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/video_image"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_play_video_outline"
                android:layout_marginStart="8dp"
                app:tint="@color/primary_color"/>
            <TextView
                android:textSize="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/video_title"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/probe_insertion_fragment_how_to_insert_link"
                android:maxLines="1"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                app:autoSizeMaxTextSize="18dp"
                app:autoSizeMinTextSize="4dp"
                app:autoSizeStepGranularity="1dp"
                app:autoSizeTextType="uniform"
                style="@style/MEATER.Body2"/>
        </LinearLayout>
        <View
            android:id="@+id/doNotShowDivider"
            android:background="@color/grey_e"
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            app:layout_constraintBottom_toTopOf="@+id/doNotShowButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:textColor="@color/primary_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/doNotShowButton"
            android:background="@drawable/selected_white_bg_with_pink_selection"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/probe_insertion_fragment_button_1"
            android:onClick="onDoNotShowButtonClick"
            app:autoSizeMaxTextSize="18dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/MEATER.Body2"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.03"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.55"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
