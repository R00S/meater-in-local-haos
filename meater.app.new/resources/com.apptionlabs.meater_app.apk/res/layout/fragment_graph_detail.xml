<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/usdaImage"
            android:layout_width="49dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/usda_safe"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="@+id/cook_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cook_icon"/>
        <TextView
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:id="@+id/cook_started"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="0.5dp"
            android:text="@string/cook_started_label"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gradientBarLayout"
            style="@style/NormalTextViewLeft"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/cook_started_value"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:maxWidth="280dp"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            app:autoSizeMaxTextSize="16dp"
            app:autoSizeMinTextSize="1dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/cook_started"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cook_started"
            style="@style/NormalTextViewLeft"/>
        <TextView
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:id="@+id/cookTimeLabel"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="0.5dp"
            android:text="@string/cook_time_label"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_divider_3"
            style="@style/NormalTextViewLeft"/>
        <TextView
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:id="@+id/cookTime"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/cookTimeLabel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cookTimeLabel"
            style="@style/NormalTextViewLeft"/>
        <TextView
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:id="@+id/estimateLabel"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="0.5dp"
            android:text="@string/estimated_time"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/estimateDivider"
            style="@style/NormalTextViewLeft"/>
        <TextView
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:id="@+id/estimateTime"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/estimateLabel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/estimateLabel"
            style="@style/NormalTextViewLeft"/>
        <View
            android:id="@+id/top_divider_3"
            android:background="@color/grey_e"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            app:layout_constraintBottom_toBottomOf="@+id/cook_started_value"/>
        <View
            android:id="@+id/estimateDivider"
            android:background="@color/grey_e"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            app:layout_constraintBottom_toBottomOf="@+id/cookTimeLabel"/>
        <View
            android:id="@+id/top_divider_4"
            android:background="@color/grey_e"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            app:layout_constraintTop_toBottomOf="@+id/estimateLabel"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:id="@+id/cook_icon"
            android:background="@drawable/white_circle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="12dp"
            android:backgroundTint="@color/primary_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black_color"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/cook_description"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            app:autoSizeMaxTextSize="22dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/cook_icon"
            app:layout_constraintLeft_toRightOf="@+id/cook_icon"
            app:layout_constraintTop_toTopOf="@+id/cook_icon"/>
        <com.apptionlabs.meater_app.views.CookSummaryDonennessView
            android:id="@+id/gradientBarLayout"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/cook_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cook_icon"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
