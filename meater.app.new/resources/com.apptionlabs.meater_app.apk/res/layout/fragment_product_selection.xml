<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:id="@+id/body1"
        android:layout_marginTop="16dp"
        android:text="@string/product_selection_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/qsgSubTitle"/>
    <TextView
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:id="@+id/skipLabel"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/qsgSubTitle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_marginTop="24dp"
        android:text="@string/product_selection_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/qstTitle"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:fadingEdgeLength="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/product_selection_list_margin_top"
        android:layout_marginBottom="16dp"
        android:requiresFadingEdge="horizontal"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/whyDoINeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body1"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/whyDoINeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/my_meater_is_not_listed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list"
        style="@style/qsgSubTitle"/>
    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whyDoINeed"/>
</androidx.constraintlayout.widget.ConstraintLayout>
