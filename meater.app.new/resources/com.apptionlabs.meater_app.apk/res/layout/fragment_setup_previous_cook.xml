<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:theme="@style/AppTheme"
            android:id="@+id/toolbar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/cook_summary_screen_title"
            app:titleCentered="false"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:scrollbarThumbVertical="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="@dimen/max_screen_width"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintWidth_max="@dimen/max_screen_width">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/warning_layout"
                    android:background="@color/grey_6"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/picker_warning_image"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/warning1"
                        android:layout_weight="2"
                        android:layout_marginStart="6dp"
                        app:tint="@android:color/white"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@android:color/white"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:id="@+id/picker_warning_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/confirm_cook_fragment_heading_1"
                        android:layout_weight="8"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/detailText"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/confirm_cook_fragment_label_1"
                            android:layout_marginStart="4dp"
                            style="@style/NormalTextViewLeft"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:ellipsize="end"
                            android:id="@+id/cookNameField"
                            android:background="@drawable/edit_text_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:maxLength="32"
                            android:imeOptions="actionDone"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_gravity="center"
                        android:id="@+id/titleImage"
                        android:background="@drawable/white_circle"
                        android:visibility="visible"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitCenter"
                        android:backgroundTint="@color/primary_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </LinearLayout>
                <View
                    android:id="@+id/divider"
                    android:background="@color/grey_e"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
                <View
                    android:background="@color/grey_e"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/alertListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alert_header_view">
                <RelativeLayout
                    android:background="@color/white"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/favourite_cook_layout">
                    <View
                        android:id="@+id/d_2"
                        android:background="@color/grey_e"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/alert_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/d_2"/>
                </RelativeLayout>
                <View
                    android:background="@color/grey_e"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/alert_layout"
                android:background="@color/white"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alert_header_view">
                <ListView
                    android:id="@+id/alert_list"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@drawable/ripple"
                    android:dividerHeight="1dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/alert_header_view"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/d_1"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/bell_image"
                    android:padding="4dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/bell"
                    android:layout_marginStart="2dp"
                    android:backgroundTint="@color/grey_f6"
                    app:tint="@color/grey_9"/>
                <ImageView
                    android:id="@+id/alert_plus_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/plus"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/grey_9"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="18dp"
                    android:textColor="@color/grey_9"
                    android:id="@+id/alertTextCount"
                    android:padding="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_active_alert"
                    android:layout_toRightOf="@+id/bell_image"
                    android:layout_centerVertical="true"
                    android:textAllCaps="true"
                    android:layout_marginStart="0dp"/>
            </RelativeLayout>
            <View
                android:id="@+id/d_1"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/temp_picker"/>
            <com.apptionlabs.meater_app.views.MEATERScalesView
                android:id="@+id/temp_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading"/>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
