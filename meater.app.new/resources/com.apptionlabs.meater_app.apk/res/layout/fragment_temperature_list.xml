<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:theme="@style/AppTheme"
            android:id="@+id/toolbar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/setup_cook_label"
            app:titleCentered="false"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:scrollbarThumbVertical="@color/white"
        android:id="@+id/parentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintWidth_max="@dimen/max_screen_width">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/warning_layout"
                android:background="@color/grey_6"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/picker_warning_image"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/warning1"
                    android:layout_weight="2"
                    android:layout_marginStart="6dp"
                    app:tint="@android:color/white"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:id="@+id/picker_warning_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/confirm_cook_fragment_heading_1"
                    android:layout_weight="8"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <com.apptionlabs.meater_app.views.MEATERScalesView
                android:id="@+id/temp_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:layout_below="@+id/warning_layout"/>
            <View
                android:id="@+id/line"
                android:background="@color/grey_e"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/temp_picker"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/cook_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/line">
                <com.apptionlabs.meater_app.views.MEATERHeaderTextOnly
                    android:id="@+id/heading_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="32dp"
                    app:header_text="@string/custom_cook_fragment_heading_1"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:ellipsize="end"
                    android:id="@+id/customCookField"
                    android:background="@color/view_active_color"
                    android:padding="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:hint="@string/custom_cook_fragment_cook_name_field_hint"
                    android:maxLines="1"
                    android:maxLength="32"
                    android:inputType="text"
                    android:windowSoftInputMode="stateHidden"
                    android:imeOptions="actionDone"
                    android:paddingStart="7dp"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <View
                android:id="@+id/divider_"
                android:background="@color/grey_e"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/cook_name"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/cook_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/divider_">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp">
                    <ImageView
                        android:id="@+id/bell_image"
                        android:visibility="visible"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/bell"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="6dp"
                        app:tint="@color/grey_9"/>
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/grey_9"
                        android:gravity="bottom"
                        android:id="@+id/alertCountText"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="@string/setting_screen_heading_2"
                        android:includeFontPadding="false"
                        android:layout_toRightOf="@+id/bell_image"
                        android:layout_alignParentBottom="true"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginStart="2dp"/>
                    <ImageView
                        android:id="@+id/alertPlusView"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/plus"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="6dp"
                        app:tint="@color/grey_6"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/alert_recycler_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cook_name1">
                    <View
                        android:id="@+id/rcTopDivider"
                        android:background="@color/grey_e"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"/>
                    <RelativeLayout
                        android:id="@+id/paired_list_view"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/alert_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <View
                        android:id="@+id/rcBottomDivider"
                        android:background="@color/grey_e"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/video_link_container"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/video_container"
                            android:layout_width="match_parent"
                            android:layout_height="42dp">
                            <com.apptionlabs.meater_app.views.MEATERHeaderRow
                                android:id="@+id/info_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="32dp"
                                app:header_text="@string/need_help_label"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/help_link_row"
                            android:background="@color/view_active_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:background="@drawable/probe_list_selector"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/video_icon"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_play_video_outline"
                                    android:layout_marginStart="6dp"/>
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/video_link_title"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/custom_cook_fragment_how_to_cook_link"
                                    android:paddingStart="6dp"
                                    android:paddingEnd="4dp"
                                    app:autoSizeMaxTextSize="16dp"
                                    app:autoSizeMinTextSize="10dp"
                                    app:autoSizeStepGranularity="1dp"
                                    app:autoSizeTextType="uniform"
                                    style="@style/MEATER.Body1.Normal"/>
                            </LinearLayout>
                            <View
                                android:background="@color/grey_e"
                                android:layout_width="match_parent"
                                android:layout_height="0.7dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
