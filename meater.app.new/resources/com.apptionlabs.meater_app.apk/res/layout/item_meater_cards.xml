<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:background="@color/dashboard_cell_disabled_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:left_swipe_enabled="false"
    app:right_swipe_enabled="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/baseLayoutContainer"
        android:background="@color/white"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.415"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/nameLeftGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.455"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.1"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/dialVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.425"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/bottomGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.95"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/temperatureRow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxHeight="@dimen/indicator_cell_max_height_dashboard"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="@+id/bottomGuideLine"
            app:layout_constraintHeight_max="@dimen/indicator_cell_max_height_dashboard"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintLeft_toLeftOf="@+id/guideline1"
            app:layout_constraintRight_toRightOf="parent">
            <com.apptionlabs.meater_app.views.TemperatureView
                android:layout_gravity="center"
                android:id="@+id/tempIndicatorInternal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:indicator_color="@color/meater_pink"
                app:indicator_is_list_item="true"
                app:indicator_label="@string/internal_label"/>
            <com.apptionlabs.meater_app.views.TemperatureView
                android:layout_gravity="center"
                android:id="@+id/tempIndicatorTarget"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:indicator_color="@color/meater_blue"
                app:indicator_is_list_item="true"
                app:indicator_label="@string/target_label"/>
            <com.apptionlabs.meater_app.views.TemperatureView
                android:layout_gravity="center"
                android:id="@+id/tempIndicatorAmbient"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:indicator_color="@color/meater_green"
                app:indicator_is_list_item="true"
                app:indicator_label="@string/ambient_label"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="bottom|left"
            android:id="@+id/text_cook_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:maxLines="1"
            android:fontFamily="@font/roboto_light"
            android:layout_marginEnd="8dp"
            android:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="@dimen/dashboard_cook_name_max_size"
            app:autoSizeMinTextSize="1dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/recipe_step"
            app:layout_constraintLeft_toLeftOf="@+id/nameLeftGuideLine"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:id="@+id/recipe_step_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ic_master_class"
            android:scaleType="centerInside"
            android:tint="@color/black_color"
            app:layout_constraintBottom_toTopOf="@+id/temperatureRow"
            app:layout_constraintLeft_toLeftOf="@+id/nameLeftGuideLine"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="center"
            android:id="@+id/recipe_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:maxLines="1"
            android:fontFamily="@font/roboto_light"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="@dimen/dashboard_recipe_step_max_size"
            app:autoSizeMinTextSize="1dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_step_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recipe_step_image"
            app:layout_constraintTop_toTopOf="@+id/recipe_step_image"/>
        <com.apptionlabs.meater_app.views.DialComponent
            android:id="@+id/meaterView"
            android:clipChildren="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:indicator_is_list_item="true"
            app:layout_constraintBottom_toBottomOf="@+id/hiddenBottomView"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.95"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/dialVertical"/>
        <View
            android:id="@+id/hiddenBottomView"
            android:background="@color/primary_color"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>
        <LinearLayout
            android:layout_gravity="bottom|left"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="12dp"
                android:id="@+id/debug_info"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/row_back_ground_container"
            android:background="@drawable/probe_list_selector"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.apptionlabs.meater_app.views.ProbeConnectionStatusView
            android:id="@+id/connection_image"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/cancel_cook_button"
        android:background="@color/primary_color"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:gravity="right"
        app:sticky="100dp"
        app:sticky_sensitivity="0.25">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/cancel_cook"
                android:scaleType="fitXY"
                android:contentDescription="@string/stop_label"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/end_cook_title"
                android:maxLines="1"
                app:autoSizeMaxTextSize="16dp"
                app:autoSizeMinTextSize="1dp"
                app:autoSizeStepGranularity="1dp"
                app:autoSizeTextType="uniform"/>
        </LinearLayout>
    </LinearLayout>
</ru.rambler.libs.swipe_layout.SwipeLayout>
