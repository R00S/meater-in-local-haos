<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/ambientValues"
        android:background="@drawable/ambient_circle"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:maxLines="1"
        android:layout_alignParentRight="true"
        app:autoSizeMaxTextSize="18dp"
        app:autoSizeMinTextSize="1dp"
        app:autoSizeStepGranularity="1dp"/>
    <TextView
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/internalValues"
        android:background="@drawable/internal_circle"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/ambientValues"
        android:layout_marginEnd="4dp"
        app:autoSizeStepGranularity="1dp"
        app:layout_constraintEnd_toStartOf="@+id/ambientValues"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/cookStateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/estimate_cook_time_label"
        android:layout_toLeftOf="@+id/internalValues"
        android:layout_below="@+id/cookNameText"
        style="@style/TextAppearance.Compat.Notification"/>
    <ImageView
        android:gravity="center"
        android:layout_gravity="left"
        android:id="@+id/probeNumber"
        android:visibility="gone"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="3dp"
        android:src="@drawable/ic_box_1"
        android:scaleType="centerInside"
        android:layout_alignTop="@+id/cookNameText"
        android:layout_alignBottom="@+id/cookNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:autoSizeTextType="uniform"
        style="@style/TextAppearance.Compat.Notification.Title"/>
    <TextView
        android:gravity="top"
        android:id="@+id/cookNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/internalValues"
        android:layout_toRightOf="@+id/probeNumber"
        style="@style/TextAppearance.Compat.Notification.Title"/>
</RelativeLayout>
