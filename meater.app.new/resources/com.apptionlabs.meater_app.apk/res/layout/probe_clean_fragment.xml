<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarThumbVertical="@color/white"
    android:id="@+id/signInScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/dim_transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/baseLayoutContainer"
            android:background="@drawable/rounded_corner_dialog_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="48dp"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="@dimen/max_screen_width">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/probe_image"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_bulb"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textColor="@color/black_color"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:id="@+id/textView1"
                android:paddingTop="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/probe_cleaning_screen_heading"
                android:layout_below="@+id/probe_image"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_regular"
                app:autoSizeMaxTextSize="10dp"
                app:autoSizeMinTextSize="4dp"
                app:autoSizeStepGranularity="1dp"
                app:autoSizeTextType="none"
                app:layout_constraintLeft_toLeftOf="@+id/video"
                app:layout_constraintRight_toRightOf="@+id/video"
                app:layout_constraintTop_toBottomOf="@+id/probe_image"/>
            <VideoView
                android:layout_gravity="center"
                android:id="@+id/video"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                app:layout_constraintDimensionRatio="1:0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                app:layout_constraintWidth_max="300dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/readMoreButton"
                android:background="@drawable/rounded_button_background"
                android:padding="6dp"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/read_more_text"
                android:layout_below="@+id/video"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_medium"
                app:autoSizeMaxTextSize="16dp"
                app:autoSizeMinTextSize="4dp"
                app:autoSizeStepGranularity="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/video"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="15dp"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:id="@+id/doNotShowButton"
                android:padding="6dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/donot_remind_me_next_time"
                android:layout_below="@+id/readMoreButton"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_medium"
                app:autoSizeMaxTextSize="16dp"
                app:autoSizeMinTextSize="4dp"
                app:autoSizeStepGranularity="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/readMoreButton"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:id="@+id/dismissButton"
                android:padding="6dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="8dp"
                android:text="@string/dismiss_text"
                android:layout_below="@+id/doNotShowButton"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_medium"
                app:autoSizeMaxTextSize="16dp"
                app:autoSizeMinTextSize="4dp"
                app:autoSizeStepGranularity="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doNotShowButton"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
