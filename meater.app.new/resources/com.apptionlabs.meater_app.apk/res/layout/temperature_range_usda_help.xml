<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarThumbVertical="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/view_active_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="@dimen/max_screen_width">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:id="@+id/heading"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/usda_compliance_screen_heading"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/usdaImage"
                style="@style/MEATER.Body2"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/usdaImage"
                android:layout_width="72dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/usda_safe"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:id="@+id/detailView"
                android:paddingLeft="@dimen/view_start_padding"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/view_end_padding"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/usda_compliance_screen_text1"
                android:layout_below="@+id/heading"
                style="@style/MEATER.Body1.Normal"/>
            <RelativeLayout
                android:id="@+id/webLinkView"
                android:background="@drawable/normal_selector"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_start_padding"
                android:layout_marginRight="@dimen/view_end_padding"
                android:layout_below="@+id/detailView">
                <ImageView
                    android:id="@+id/copyImage"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_link_icon"
                    android:scaleType="center"
                    android:layout_centerVertical="true"
                    app:tint="@color/meater_blue"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/meater_blue"
                    android:gravity="center_vertical"
                    android:id="@+id/readMoreText"
                    android:paddingLeft="8dp"
                    android:paddingBottom="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/usda_compliance_screen_read_more"
                    android:layout_toRightOf="@+id/copyImage"
                    style="@style/MEATER.Body2"/>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:id="@+id/heading2"
                android:paddingLeft="@dimen/view_start_padding"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/cooking_temperature_text"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/usdaImage"
                android:layout_below="@+id/webLinkView"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/preset_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/heading2"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
