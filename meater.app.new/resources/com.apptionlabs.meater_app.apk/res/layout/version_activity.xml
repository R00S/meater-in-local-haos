<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:theme="@style/AppTheme"
            android:id="@+id/toolbar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="Troubleshooting Information"
            app:titleCentered="true"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:scrollbarThumbVertical="@color/white"
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintWidth_max="@dimen/max_screen_width">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/listLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">
            <View
                android:background="@color/grey_e"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"/>
            <com.apptionlabs.meater_app.views.MEATERHeaderTextOnly
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                app:header_text=""/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/androidContainer"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/androidVersion"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/meater_cloud_images"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/manageDeviceContainer"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/appVersion"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/meater_cloud_images"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/netWorkInterfaceContainer"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/netWorkInterface"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <com.apptionlabs.meater_app.views.MEATERHeaderTextOnly
                android:id="@+id/heading_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                app:header_text="@string/available_firmware_versions"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/mPLUSVersion"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/meater_plus"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/containerSE"
                android:background="@drawable/layout_selector"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/mPLUSSEVersion"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/meater_plus_se_name"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/mMeaterPlus2"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/plus_g2_name"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/proContainer"
                android:background="@drawable/layout_selector"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/mProVersion"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/meater_pro_label"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/mBlockVersion"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/meater_block_label"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/xlContainer"
                android:background="@drawable/layout_selector"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/mProXLVersion"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/meater_pro_xl_label"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <com.apptionlabs.meater_app.views.MEATERHeaderTextOnly
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                app:header_text="@string/cloud_status"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/cloudSignIn"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/signed_in_text"
                    android:layout_toRightOf="@+id/meater_cloud_images"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/cloudStatus"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/wifi_strength_disconnected"
                    android:layout_toRightOf="@+id/meater_cloud_images"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <com.apptionlabs.meater_app.views.MEATERHeaderTextOnly
                android:id="@+id/permissionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                app:header_text="Permission"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/locationContainer"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/locationPermission"
                    android:paddingTop="1dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text=""
                    android:layout_toRightOf="@+id/meater_cloud_images"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/bleContainer"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/blePermissions"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text=""
                    android:layout_toRightOf="@+id/meater_cloud_images"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <com.apptionlabs.meater_app.views.MEATERHeaderTextOnly
                android:id="@+id/devModeHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                app:header_text="@string/developer_options"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/devContainer"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:id="@+id/devMode"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/enabled"
                    android:layout_toRightOf="@+id/meater_cloud_images"
                    style="@style/MEATER.Body1.Normal"/>
            </LinearLayout>
            <com.apptionlabs.meater_app.views.MEATERHeaderTextOnly
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                app:header_text="Paired devices"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/grey_f6"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_alignParentTop="true"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view1"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="42dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
