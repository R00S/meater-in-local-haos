<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:minHeight="160dp"
        android:backgroundTint="@color/card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/preview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <FrameLayout
                    android:id="@+id/progressHolder"
                    android:background="@drawable/circle_red_fill"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentTop="true">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="14dp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:id="@+id/progressIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"/>
                </FrameLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="start"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progressHolder"
                    style="@style/VT_List_Title"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageInfo"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_info"
                    android:tint="@color/black_color"
                    android:layout_below="@+id/title"
                    android:layout_marginEnd="8dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/title"
                    android:layout_toEndOf="@+id/imageInfo"
                    style="@style/VT_List_SubTitle"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageDuration"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_time_duration"
                    android:tint="@color/black_color"
                    android:layout_below="@+id/subTitle"
                    android:layout_marginEnd="8dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/durationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/subTitle"
                    android:layout_toEndOf="@+id/imageDuration"
                    style="@style/VT_List_Duration"/>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/preview"
                android:background="@drawable/rounded_corner_background_transparent"
                android:layout_width="@dimen/video_tutorial_preview_height_width"
                android:layout_height="@dimen/video_tutorial_preview_height_width"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
