<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/temperatureBackCircle"
        android:background="@drawable/circle"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerInParent="true"/>
    <com.apptionlabs.meater_app.views.LetterSpacingTextView
        android:id="@+id/textTemperature"
        android:paddingBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{model.temperatureText}"
        android:layout_centerInParent="true"
        style="@style/TemperatureCircleText"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/grey_6"
        android:gravity="center"
        android:id="@+id/temperatureLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:autoSizeMaxTextSize="30dp"
        app:autoSizeMinTextSize="4dp"
        app:autoSizeStepGranularity="1dp"
        app:autoSizeTextType="uniform"/>
</RelativeLayout>
