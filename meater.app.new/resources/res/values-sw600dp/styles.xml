<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/meater_screen_background</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="actionBarStyle">@style/QSGActionbar</item>
        <item name="background">@color/white</item>
        <item name="colorAccent">@color/black_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
    </style>
    <style name="ChooseProductList" parent="">
        <item name="android:layout_width">600dp</item>
    </style>
    <style name="NewsDynamicLayoutNotLoggedInView" parent="">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">332dp</item>
    </style>
    <style name="OffersItem" parent="">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">300dp</item>
    </style>
    <style name="OffersItemRoot" parent="">
        <item name="android:layout_width">-2</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="PrimaryRedButton" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">0x11</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_width">-2</item>
        <item name="android:layout_height">-2</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:backgroundTint">@drawable/primary_red_button_selector</item>
    </style>
    <style name="QSG_Product_Title" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">0x0</item>
        <item name="android:textColor">@color/sub_title_text_color</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="RecipeTab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">-2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="Recipe_List_Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">0x1</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:fontFamily">@font/qsg_title_font</item>
        <item name="gravity">center</item>
    </style>
    <style name="Step_Description" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="StepsDialogFrame" parent="">
        <item name="android:layout_width">600dp</item>
    </style>
    <style name="StepsPreviewDialogFrame" parent="">
        <item name="android:layout_width">600dp</item>
    </style>
    <style name="SummaryDialogFrame" parent="">
        <item name="android:layout_width">600dp</item>
    </style>
    <style name="SummaryPlayerView" parent="">
        <item name="layout_constraintDimensionRatio">9:13</item>
    </style>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
    </style>
    <style name="qsgAnimationView" parent="">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>
    <style name="qsgSubTitle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">0x0</item>
        <item name="android:textColor">@color/sub_title_text_color</item>
        <item name="android:layout_width">-2</item>
        <item name="android:layout_height">-2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="gravity">center</item>
    </style>
    <style name="qstTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:layout_width">-2</item>
        <item name="android:layout_height">-2</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/qsg_title_font</item>
        <item name="gravity">center</item>
    </style>
</resources>
