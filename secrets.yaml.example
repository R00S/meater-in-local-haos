# ESPHome Secrets Configuration
# Copy this file to secrets.yaml and fill in your actual values
# secrets.yaml is gitignored to keep your credentials safe

# WiFi Configuration
wifi_ssid: "your-wifi-ssid"
wifi_password: "your-wifi-password"

# Fallback Access Point (when WiFi fails)
fallback_ap_ssid: "Meater Fallback Hotspot"
fallback_ap_password: "your-fallback-password"

# API Encryption Key
# Generate a new key with: esphome config meater.yaml
api_encryption_key: "your-32-byte-base64-encoded-key-here"

# OTA Update Password
ota_password: "your-ota-password"

# MEATER Device MAC Address
# Find your MEATER's MAC address using a BLE scanner app
# Format: XX:XX:XX:XX:XX:XX
meater_mac_address: "B8:1F:5E:44:EC:8D"
